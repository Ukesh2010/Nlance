<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.assignment.elance.models.Skill" table="skill">
        <id column="skill_id" name="skill_id">
            <generator class="native"/>
        </id>
        <property column="skill_name" name="skill_name" />
        <!--        <set fetch="select" inverse="true" lazy="true" name="job_skills" table="job_skill">
            <key>
                <column name="skill_id" not-null="true"/>
            </key>
            <one-to-many class="com.assignment.elance.models.Job_Skill"/>
        </set>-->
        <set name="jobs" table="job_skill" inverse="false" lazy="true" fetch="select" cascade="all">
            <key>
                <column name="skill_id" not-null="true"/>
            </key>
            <many-to-many entity-name="com.assignment.elance.models.Job">
                <column name="job_id" not-null="true"/>
            </many-to-many>
               
        </set>
        
    </class>
</hibernate-mapping>
